<UserControl x:Class="Watch3D.Package.TheToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helix="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="This">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <helix:HelixViewport3D
            x:Name="Viewport"
            Grid.Row="0"
            ZoomExtentsWhenLoaded="True"
            ShowViewCube="True"
            ShowCoordinateSystem="True"
            Title="Empty"
            ItemsSource="{Binding ElementName=This, Path=Scene.SceneItems}"
            />
        <DockPanel Grid.Row="1" LastChildFill="True">
            <Label DockPanel.Dock="Left" Content="Mesh symbol name"></Label>
            <Button x:Name="AddButton" DockPanel.Dock="Right" Content="Add" Click="Add"/>
            <TextBox x:Name="MeshSymbol" Text="" MinWidth="100"/>
        </DockPanel>
    </Grid>
</UserControl>

